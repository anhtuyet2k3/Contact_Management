<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp"
    tools:context=".UnitDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btnBackUnit"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:background="@null"
            app:srcCompat="@drawable/ic_back"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        <!-- Không gian trống để đẩy nút sửa sang bên phải -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btnEditUnit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@null"
                app:srcCompat="@drawable/ic_edit"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            <TextView
                android:id="@+id/txtTitle"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sửa"/>
        </LinearLayout>
    </LinearLayout>


    <com.example.contactmanagementapp.Circle
        android:id="@+id/imgLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/ic_user"/>

    <TextView
        android:id="@+id/txt_nameUnit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Công nghệ thông tin"
        android:textSize="21dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:background="@drawable/ip_radius_white">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtSDTUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Số điện thoại"
                android:text="0352824025"
                android:paddingStart="15dp"
                android:paddingEnd="16dp"
                android:textSize="20dp"
                tools:ignore="TouchTargetSizeCheck" /> <!-- Thêm thuộc tính này nếu cần -->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="Di động"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnCallUnit"
                android:layout_width="47dp"
                android:layout_height="60dp"
                android:layout_marginRight="7dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_call"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/btnCommentUnit"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_comment"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:background="@null">

        <TextView
            android:id="@+id/Email"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="Email"
            android:textSize="16dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/txtEmailUnit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="32dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Email"
            android:paddingTop="14dp"
            android:paddingStart="20dp"
            android:paddingEnd="16dp"
            android:textSize="16dp"
            tools:ignore="TouchTargetSizeCheck,TextSizeCheck" /> <!-- Thêm thuộc tính này nếu cần -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:background="@null">

        <TextView
            android:id="@+id/Website"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="Website"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/txtWebsite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Website"
            android:paddingStart="20dp"
            android:paddingEnd="16dp"
            android:paddingTop="14dp"
            android:textSize="16dp"
            tools:ignore="TouchTargetSizeCheck,TextSizeCheck" /> <!-- Thêm thuộc tính này nếu cần -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:background="@null">

        <TextView
            android:id="@+id/Diachi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="Địa chỉ"
            android:textSize="16dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/txtDiachi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Địa chỉ"
            android:paddingStart="20dp"
            android:paddingEnd="16dp"
            android:paddingTop="14dp"
            android:textSize="16dp"
            tools:ignore="TouchTargetSizeCheck,TextSizeCheck" /> <!-- Thêm thuộc tính này nếu cần -->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:background="@null">

        <TextView
            android:id="@+id/DonviCha"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="Đơn vị cha"
            android:textSize="16dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/txtDonviCha"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Đơn vị cha"
            android:paddingStart="20dp"
            android:paddingEnd="16dp"
            android:textSize="16dp"
            android:paddingTop="14dp"
            tools:ignore="TouchTargetSizeCheck,TextSizeCheck" /> <!-- Thêm thuộc tính này nếu cần -->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="260dp"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btnDeleteUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa liên hệ"
            android:textColor="#D70004"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            />
    </LinearLayout>
</LinearLayout>